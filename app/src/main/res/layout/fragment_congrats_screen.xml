<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".play.CongratsScreen"
    android:background="@color/light_pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="-150dp">

            <TextView
                android:id="@+id/level_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level Complete"
                android:gravity="center"
                android:textColor="@color/dark_brown"
                android:textSize="48sp"
                android:fontFamily="@font/baloo2_bold"/>

            <TextView
                android:id="@+id/final_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Final Score: 20"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:fontFamily="@font/baloo2_bold"/>
            <TextView
                android:id="@+id/time_spent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Spent: 0"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:fontFamily="@font/baloo2_bold"/>
            <Button
                android:id="@+id/next_level_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/onboard_button_bkg"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="16dp"
                android:text="@string/nextLevel" />
            <Button
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/onboard_button_bkg"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:text="@string/back" />

        </LinearLayout>



    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/jigsaw_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>