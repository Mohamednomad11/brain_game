<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:elevation="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tvLabelLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="@color/dark_brown"
                        android:text="Level" />
                    <TextView
                        android:id="@+id/tvlLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/dark_brown"
                        android:text="Easy" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tvGame_scoreLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="32sp"
                        android:textColor="@color/dark_brown"
                        android:text="Score" />
                    <TextView
                        android:id="@+id/game_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="24sp"
                        android:textColor="@color/dark_brown"
                        android:text="00" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tvTimeLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="32sp"
                        android:textColor="@color/dark_brown"
                        android:text="Time" />
                    <TextView
                        android:id="@+id/timerTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="24sp"
                        android:textColor="@color/dark_brown"
                        android:text="00" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/info_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/info"
                android:layout_alignParentEnd="true"
                android:elevation="10dp"/>

        </RelativeLayout>

    </LinearLayout>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

<!-- Left Column with ImageViews -->
<LinearLayout
    android:id="@+id/leftColumn"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:weightSum="4"
    android:paddingHorizontal="4dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLeftOne"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/ivLeftImage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/elephant"
            android:contentDescription="Image 1" />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLeftTwo"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/ivLeftImage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:contentDescription="Image 1"
            android:src="@drawable/giraffe" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLeftThree"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/ivLeftImage3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/rhino"
            android:contentDescription="Image 1" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLeftFour"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/ivLeftImage4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/tiger"
            android:contentDescription="Image 1" />

    </androidx.cardview.widget.CardView>

    <!-- Add more ImageViews as needed -->

</LinearLayout>

<!-- Right Column with CardViews -->
<LinearLayout
    android:id="@+id/rightColumn"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:weightSum="4"
    android:paddingHorizontal="4dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRightOne"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <ImageView
                android:id="@+id/ivRightImage1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="Card 1 Image" />
            <TextView
                android:id="@+id/tvRightImage1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="Elephent" />

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRightTwo"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <ImageView
                android:id="@+id/ivRightImage2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="Card 3 Image" />
            <TextView
                android:id="@+id/tvRightImage2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="Giraffe" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRightThree"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <ImageView
                android:id="@+id/ivRightImage3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="Card 3 Image" />
            <TextView
                android:id="@+id/tvRightImage3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="Rhino" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRightFour"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <ImageView
                android:id="@+id/ivRightImage4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="Card 4 Image" />
            <TextView
                android:id="@+id/tvRightImage4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="Tiger" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <!-- Add more CardViews as needed -->

</LinearLayout>

</LinearLayout>
</LinearLayout>